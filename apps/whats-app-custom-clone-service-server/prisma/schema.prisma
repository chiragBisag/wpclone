datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Message {
  chat      Chat?    @relation(fields: [chatId], references: [id])
  chatId    String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  sender    String?
  text      String?
  updatedAt DateTime @updatedAt
}

model Contact {
  contactUser String?
  createdAt   DateTime @default(now())
  id          String   @id @default(cuid())
  updatedAt   DateTime @updatedAt
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

model Chat {
  createdAt    DateTime  @default(now())
  id           String    @id @default(cuid())
  messages     Message[]
  participants String?
  updatedAt    DateTime  @updatedAt
}

model Status {
  content   String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
  viewer    String?
}

model User {
  contacts       Contact[]
  createdAt      DateTime  @default(now())
  email          String?   @unique
  firstName      String?
  id             String    @id @default(cuid())
  lastName       String?
  mobileNumber   String?
  password       String
  profilePicture Json?
  roles          Json
  status         String?
  updatedAt      DateTime  @updatedAt
  username       String    @unique
}
